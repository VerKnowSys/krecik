#!/bin/sh
# blame: @dmilith
# 2018-11-22-0129-1542846591


. bin/common "${*}"


echo
echo
echo "Project directory: ${_cargo_project_dir}"
echo "Project product: ${_bin_name}"
echo "Project release type: ${_release_type}"
echo "System type: ${_uname}"
echo
echo


printf "\n\nBuilding: Library: %b\n" "${_project_name}"
cargo build \
    --verbose \
    --lib ${_cargo_release_flag}
if [ "0" != "${?}" ]; then
    echo "Build: Library: Failed!" \
        && exit 1
fi

printf "\n\nBuilding: Binary: %b\n" "${_project_name}"
cargo build \
    --verbose \
    --bin "${_bin_name}" \
    ${_cargo_release_flag}
if [ "0" != "${?}" ]; then
    echo "Build: Binary: Failed!" \
        && exit 1
fi
