#!/bin/sh
# blame: @dmilith
# 2018-11-22-0129-1542846591


. bin/common "${*}"


printf "Building project: %b\n" "${_project_name}"
cargo build ${_cargo_release_flag}
if [ "0" != "${?}" ]; then
    echo "Build Failed!" \
        && exit 1
fi


